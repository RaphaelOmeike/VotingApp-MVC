@model VotingApp.Models.RequestModels.CandidatePositionRequestModel

@{
    ViewData["Title"] = "Update Campaign";
}
<div class="col-6">
    <a asp-controller="Election" asp-action="MyCampaigns" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Back
    </a>
</div>
<h2 class="text-primary pt-3">@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateContest" method="post" enctype="multipart/form-data">
            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
            <div class="form-group mb-3">
                <label for="Statement" class="control-label">Manifesto</label>
                <input asp-for="Statement" class="form-control" />
                <span asp-validation-for="Statement" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" accept="image/*" style="width: 70%" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="StudentId" />
            <input type="hidden" asp-for="PositionId" />


            <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
            <a asp-controller="Election" asp-action="MyCampaigns" class="btn btn-secondary" style="width:150px">
                Back
            </a>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}