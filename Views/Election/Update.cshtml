@model VotingApp.Models.RequestModels.ElectionRequestModel

@{
    ViewData["Title"] = "Update Election";
}

<h2 class="text-primary pt-3">@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
            <input type="hidden" name="id" value="@ViewBag.ElectionId" />
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" accept="image/*" style="width: 70%" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="SessionId">Session</label>
                <select asp-for="SessionId" asp-items="ViewBag.Session" class="form-control"></select>
                <span asp-validation-for="SessionId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="RuleId">Rule</label>
                <select asp-for="RuleId" asp-items="ViewBag.Rule" class="form-control"></select>
                <span asp-validation-for="RuleId" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
            <a asp-controller="Election" asp-action="GetAll" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}